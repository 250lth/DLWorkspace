{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "defaultValue": "dlwsadmin",
            "metadata": {
              "description": "User name for the virtual machines."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
              "description": "Password for the virtual machines ."
            }
        },
        "numberOfInfraVM": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "Number of infra-VM to deploy."
            }
        },
        "infraVMSize": {
            "type": "string",
            "defaultValue": "Standard_DS1_v2",
            "metadata": {
                "description": "Size of the infra-VM. Use a CPU VM for infra-VM." 
            }
        },
        "numberOfWorkerVM": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "Number of worker-VM to deploy."
            }
        },
        "workerVMSize": {
            "type": "string",
            "defaultValue": "Standard_NC6",
            "metadata": {
                "description": "Size of the worker-VM. Use a GPU VM for worker-VM."
            }
        },
        "clusterName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
                "description": "Name of cluster"
            }
        },
        "dlwsAdmins": {
            "type": "string",
            "metadata": {
                "description": "Comma separated list of users allowed to use DLWorkspace"
            }
        }
    },
    "variables": {
        "standardStorageAccountType": "Standard_LRS",
        "imagePublisher": "Canonical",
        "imageOffer": "UbuntuServer",
        "ubuntuOSVersion": "16.04.0-LTS",
        "clusterLocation": "[resourceGroup().location]",
        "virtualNetworkName": "[concat(resourceGroup().name, '-VNet')]",
        "subnetName": "VMSubnet",
        "addressPrefix": "192.168.0.0/16",
        "singleQuote": "'"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('clusterName'), '-dev')]",
            "apiVersion": "2017-12-01",
            "location": "[variables('clusterLocation')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('infraVMSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('ubuntuOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "[variables('standardStorageAccountType')]"
                        }
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('clusterName'), '-dev')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",                    
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('clusterName'), '-dev', '-VMNic'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('clusterName'), '-dev', '-VMNIC'))]"
            ]
        },
        {
            "apiVersion": "2017-12-01",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('clusterName'), '-dev', '/setupdevbox')]",
            "location": "[variables('clusterLocation')]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', concat(parameters('clusterName'), '-dev'))]"
            ],
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/Microsoft/DLWorkspace/ARMTemplate/src/ARM/setupdevbox.sh"
                    ],
                    "timestamp": 123434234
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('bash setupdevbox.sh ', ' --cluster_name ', parameters('clusterName'), ' --cluster_location ', variables('clusterLocation'), ' --worker_vm_size ', parameters('workerVMSize'), ' --infra_vm_size ', parameters('infraVMSize'), '  --worker_node_num ', parameters('numberOfWorkerVM'),  ' --infra_node_num ', parameters('numberOfInfraVM'), ' --password ', variables('singleQuote'), parameters('adminPassword'), variables('singleQuote'), ' --users ', variables('singleQuote'), parameters('dlwsAdmins'), variables('singleQuote'))]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('clusterName'), '-infra0', copyIndex(1))]",
            "apiVersion": "2017-12-01",
            "location": "[variables('clusterLocation')]",
            "copy": {
                "name": "infraVMLoop",
                "count": "[parameters('numberOfInfraVM')]"
              },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('infraVMSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('ubuntuOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "[variables('standardStorageAccountType')]"
                        }
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('clusterName'), '-infra0', copyIndex(1))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('clusterName'), '-infra0', copyIndex(1), '-VMNic'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('clusterName'), '-infra0', copyIndex(1), '-VMNic'))]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('clusterName'), '-worker0', copyIndex(1))]",
            "apiVersion": "2017-12-01",
            "location": "[variables('clusterLocation')]",
            "copy": {
                "name": "workerVMLoop",
                "count": "[parameters('numberOfWorkerVM')]"
              },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('workerVMSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('ubuntuOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "[variables('standardStorageAccountType')]"
                        }
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('clusterName'), '-worker0', copyIndex(1))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('clusterName'), '-worker0', copyIndex(1), '-VMNic'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('clusterName'), '-worker0', copyIndex(1), '-VMNic'))]"
            ]
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "name": "[concat(parameters('clusterName'), '-dev', '-PublicIP')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('clusterLocation')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[toLower(concat(parameters('clusterName'), '-dev'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "name": "[concat(parameters('clusterName'), '-infra0', copyIndex(1), '-PublicIP')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('clusterLocation')]",
            "copy": {
                "name": "infraVMPublicIPLoop",
                "count": "[parameters('numberOfInfraVM')]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[toLower(concat(parameters('clusterName'), '-infra0', copyIndex(1)))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "name": "[concat(parameters('clusterName'), '-worker0', copyIndex(1), '-PublicIP')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('clusterLocation')]",
            "copy": {
                "name": "workerVMPublicIPLoop",
                "count": "[parameters('numberOfWorkerVM')]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[toLower(concat(parameters('clusterName'), '-worker0', copyIndex(1)))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('clusterName'), '-dev', '-VMNic')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('clusterLocation')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat(parameters('clusterName'), '-dev', '-IPConfig')]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('clusterName'), '-dev', '-PublicIP'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]"
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('clusterName'), '-NSG'))]"
                },
                "primary": true
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('clusterName'), '-dev', '-PublicIP'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('clusterName'), '-NSG'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('clusterName'), '-infra0', copyIndex(1), '-VMNic')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('clusterLocation')]",
            "copy": {
                "name": "infraVMNICLoop",
                "count": "[parameters('numberOfInfraVM')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat(parameters('clusterName'), '-infra0', copyIndex(1), '-IPConfig')]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('clusterName'), '-infra0', copyIndex(1), '-PublicIP'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]"
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('clusterName'), '-NSG'))]"
                },
                "primary": true
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('clusterName'), '-infra0', copyIndex(1), '-PublicIP'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('clusterName'), '-NSG'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('clusterName'), '-worker0', copyIndex(1), '-VMNic')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('clusterLocation')]",
            "copy": {
                "name": "workerVMNICLoop",
                "count": "[parameters('numberOfWorkerVM')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat(parameters('clusterName'), '-worker0', copyIndex(1), '-IPConfig')]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('clusterName'), '-worker0', copyIndex(1), '-PublicIP'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]"
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('clusterName'), '-NSG'))]"
                },
                "primary": true
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('clusterName'), '-worker0', copyIndex(1), '-PublicIP'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('clusterName'), '-NSG'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[concat(parameters('clusterName'), '-NSG')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('clusterLocation')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "allowalltcp",
                        "properties": {
                            "protocol": "TCP",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRanges": [
                                "80",
                                "443",
                                "30000-32767",
                                "25826",
                                "3080"
                            ]
                        }
                    },
                    {
                        "name": "allowalludp",
                        "properties": {
                            "protocol": "Udp",
                            "access": "Allow",
                            "priority": 1010,
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "25826"
                        }
                    },
                    {
                        "name": "allowdevtcp",
                        "properties": {
                            "protocol": "Tcp",
                            "access": "Allow",
                            "priority": 900,
                            "direction": "Inbound",
                            "sourceAddressPrefixes": [
                                "192.16.0.0/16",
                                "73.109.29.0/24",
                                "167.220.0.0/16",
                                "131.107.0.0/16",
                                "52.151.11.0/24",
                                "52.226.68.0/24"
                            ],
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRanges": [
                                "22",
                                "1443",
                                "2379",
                                "3306",
                                "5000",
                                "8086"
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('virtualNetworkName')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('clusterLocation')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": ["[variables('addressPrefix')]"]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[variables('addressPrefix')]"
                        }
                    }
                ]
            }
        }
    ]
}
